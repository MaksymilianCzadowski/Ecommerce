{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
<section>
    <div class="container py-5">
        <div class="row">
            {% for produit in produits %}
            <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
                <div class="card text-black">
                    <img src="{{ produit.image }}" class="card-img-top" />
                    <div class="card-body">
                        <div class="text-center mt-1">
                            <h4 class="card-title">{{ produit.nom }}</h4>
                            <h6 class="text-primary mb-1 pb-3">{{ produit.prix }}â‚¬</h6>
                        </div>

                        <div class="d-flex flex-row">
                            <button type="button" class="btn btn-primary flex-fill me-1" data-mdb-ripple-color="dark">
                            <a href="{{ path('app_detail', {'id': produit.id}) }}" style="color:inherit; text-decoration: none;">
                                En savoir plus
                                </a>
                            </button>
                            <button type="button" class="btn btn-success flex-fill ms-1">Ajouter au panier</button>
                        </div>
                    </div>
                </div>
            </div>


            {% endfor %}

            {% endblock %}