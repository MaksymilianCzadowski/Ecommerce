{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
{{ form_start(formRecherche) }}

		{{ form_widget(formRecherche.recherche, {
			attr: {
				placeholder: "Rechercher un article"
                
			}
		}) }}

		<button type="submit" class="btn btn-primary mt-2">Rechercher</button>

	{{ form_end(formRecherche) }}

<section>
    <div class="container py-5">
        <div class="row">
            {% for produit in produits %}
            <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
                <div class="card text-black">
                    <img src="{{ asset('images/produits/' ~ produit.image) }}" class="card-img-top img-responsive" />
                    <div class="card-body">
                        <div class="text-center mt-1">
                            <h4 class="card-title">{{ produit.nom }}</h4>
                            <h6 class="text-primary mb-1 pb-3">{{ produit.prix }}â‚¬</h6>
                        </div>

                        <div class="d-flex flex-row">
                            <a class="btn btn-primary flex-fill me-1" href="{{ path('app_detail', {'id': produit.id}) }}">
                                En savoir plus
                                </a>
                            <a href="{{ path('cart_add', {id: produit.id}) }}" class="btn btn-success flex-fill ms-1">Ajouter au panier</a>
                            {# <button type="button" class="btn btn-success flex-fill ms-1">Ajouter au panier</button> #}
                        </div>
                    </div>
                </div>
            </div>


            {% endfor %}

            {% endblock %}